<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">


    <Button
        android:id="@+id/btnLogoff"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="40dp"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile2"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/tv_Prof_uName"
        android:layout_width="250dp"
        android:layout_height="66dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="2dp"
        android:text="User Name"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/tv_Prof_uEmail"
        android:layout_width="256dp"
        android:layout_height="74dp"
        android:layout_marginStart="57dp"
        android:text="Email ID"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="39dp"
        android:paddingLeft="20dp"
        android:text="UserName"
        android:textColor="#009688"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="9dp"
        android:paddingLeft="20dp"
        android:text="Email"
        android:textColor="#009688"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Prof_uName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="314dp"
        android:layout_height="27dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="24dp"
        android:text="Want to Log out User ??"
        android:textColor="#E91E63"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogoff"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>