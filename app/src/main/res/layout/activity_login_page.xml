<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback2"
    tools:context=".userAuthentication.LoginPage">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile2"
        tools:ignore="MissingClass" />

    <EditText
        android:id="@+id/UEmail"
        android:layout_width="272dp"
        android:layout_height="47dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:textColor="#FBFAFA"
        android:textColorHint="#009688"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/UPassword"
        android:layout_width="272dp"
        android:layout_height="46dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#009688"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UEmail" />

    <Button
        android:id="@+id/ULogin"
        android:layout_width="219dp"
        android:layout_height="61dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="42dp"
        android:backgroundTint="#15E430"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UPassword" />

    <TextView
        android:id="@+id/UForgot"
        android:layout_width="127dp"
        android:layout_height="36dp"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="111dp"
        android:gravity="center"
        android:text="Forgot Password??"
        android:textColor="#09C8B2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/URegister"
        android:layout_width="112dp"
        android:layout_height="36dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="111dp"
        android:gravity="center"
        android:text="Register User"
        android:textColor="#0DC7CC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/UForgot" />


</androidx.constraintlayout.widget.ConstraintLayout>